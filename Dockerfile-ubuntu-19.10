FROM ubuntu:19.10

RUN set -ex \
    && sed -i -- 's/# deb-src/deb-src/g' /etc/apt/sources.list \
    && apt-get update \
    && apt-get install -y --no-install-recommends \
               build-essential \
               cdbs \
               devscripts \
               equivs \
               fakeroot \
               bison \
               flex \
               git \
               gcc-aarch64-linux-gnu \
               cpp-aarch64-linux-gnu \
               g++-aarch64-linux-gnu \
               cmake \
               patch \
               kpartx \
               xz-utils \
               lz4 \
               wget \
               libssl-dev \
    && apt-get clean \
    && rm -rf /tmp/* /var/tmp/*
